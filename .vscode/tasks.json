{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-linux",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "mkdir -p bin && gcc main.c -o bin/main"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Linux: 自动创建 bin 目录并编译 main.c"
        },
        {
            "label": "build-win",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "if not exist bin mkdir bin && gcc main.c -o bin/main.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Windows: 自动创建 bin 目录并编译 main.c"
        }
    ]
}